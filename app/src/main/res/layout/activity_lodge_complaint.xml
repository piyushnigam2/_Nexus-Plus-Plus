<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity" >

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_machine_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Machine_SNumber"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_machine_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Machine Name"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_machine_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Category"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/m_purchase_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Location"/>



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/m_Date_of_installation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description" />


    <ImageView
        android:id="@+id/image_machine"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/button_capture_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capture Image" />

        <Button
            android:id="@+id/button_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert" />
    </LinearLayout>
</LinearLayout>