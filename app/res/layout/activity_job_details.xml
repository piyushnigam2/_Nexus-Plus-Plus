<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mechanic.jobDetails">

    <include
        android:id="@+id/include4"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/jobD1"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:text="Job Details"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/jobD2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Job ID                   :- J10120"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jobD3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Supervisor Name :- Khal Drogo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jobD4"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Supervisor ID        :- 2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jobD5"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Department           :- Aircraft"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jobD6"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Date                        :- 22/09/2050"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jobD8"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Machine Name     :- xyz"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jobD9"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Description            :- Lorem Ipsum is simply dummy text of the printing and
            typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
